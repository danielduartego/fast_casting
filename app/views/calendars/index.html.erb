
<div class="col-md-4">
  <%= simple_form_for(@calendar) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :start_time %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
<div class="col-md-4">

<br>


<%= month_calendar events: @calendars do |date, calendars| %>
  <%= date.strftime("%d") %>

  <% calendars.each do |calendar| %>
    <div>
        <%= calendar.name %>
      <div class="<%= label_class(calendar.aasm_state) %>">
        <%= link_to calendar.aasm_state, calendar_status_index_path(calendar),
                  method: :post  %></div>
    </div>
  <% end %>

<% end %>
</div>
<div class="col-md-4"></div>

<br>
  <div class="ui segment">
    <div class="row">

      <div class="col-md-4"><h4 class="ui header">Project Name</h4><%= @project.name %></div>
      <div class="col-md-4"><h4 class="ui header">Shoot Date</h4><%= @project.shoot_date %></div>
      <div class="col-md-4"><h4 class="ui header">Casting Company</h4>
        <% if @project.user %>
        <%= @project.user.full_name.capitalize %>
        <% end %>
      </div>
      <br>
      <br>
      <br>
      <div class="col-md-12"><h5 class="ui header">Description</h5>
        <%= @project.description %></div>
      <br>


<!-- -------------------- user cards ------------------------ -->

      <% @bookings.each do |booking| %>
      <div class="col-md-3">
        <br>
        <div class="ui card">
          <div class="image">
            <%= image_tag booking.user.image.url(:card) %>
          </div>
          <div class="content">
            <a class="header"><%= booking.user.full_name %></a>
            <div class="meta">
              <span class="date">Inspirational</span>
            </div>
          </div>
          <div class="extra content">
            <div class="ui two buttons">
            <div class="ui basic green button">
              <%= link_to "Approve",
                  calendar_path(@project.shoot_date), method: :put %></div>

            <div class="ui basic red button"><%= link_to "Decline",
                  project_booking_path(@project, booking), method: :delete %></div>

            </div>
          </div>
        </div>
      </div>
      <% end %>

<!-- --------------------------- delete project link ------------------- -->

      <div class="col-md-12">
        <br>
        <div class="ui divider"></div>
        <div class="text-right">
          <%= link_to "Delete Project", project_path(@project), method: :delete,
          class: "ui red button" %>
        </div>
      </div>



    </div>
  </div>
<br>
<br>
<br>
<br>
